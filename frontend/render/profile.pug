head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Player Profile: ' + username)
    title PP Board - #{username}
    link(rel='stylesheet' href='../styles/main.css')
    link(rel='stylesheet' href='../styles/profile.css')
    link(rel='stylesheet' href='../styles/play-list.css')
    link(rel='icon' href='../icons/icon.png' type='image/x-icon')

body
    .top-banner
        h1 Elaina PP Project
        p A basic PP project for osu!droid.
    hr

    .main-menu
        a(href='/') Home
        a(href='/leaderboard') Leaderboard
        a(href='/whitelist') Whitelist
        a(href='/top-plays') Top Plays
        a(href='/calculate') Calculate Beatmap PP
        a(href='/prototype/leaderboard') Prototype Leaderboard
        a(href='/prototype/top-plays') Prototype Top Plays
        a(href='/prototype/calculate') Calculate Beatmap Prototype PP
    hr

    if !username
        h2.subtitle Player not found!
    else
        h2.subtitle Player Profile: #{username}

        table
            tr
                th Total PP
                td #{pptotal.toFixed(2)}pp
            tr
                th PP Rank
                td ##{pprank}
            tr
                th Play Count
                td= playcount

        ul
            each val, index in entries
                li= val.title
                    p.play-info #{val.combo}x | #{val.accuracy}% | #{val.miss} ‚ùå

                    .mod-list
                        each mod in val.displayMods
                            img(src='../icons/mods/' + mod.acronym + '.png', title=mod.name alt=mod.acronym)
                        else
                            img(src='../icons/mods/NM.png', title="NoMod" alt="NM")

                    p.pp-with-description #{val.pp}pp
                    p.pp-description (#{(val.pp * Math.pow(0.95, index)).toFixed(2)}pp; weighted #{Math.round(100 * Math.pow(0.95, index))}%)
hr
footer
    p osu!droid Elaina PP Project Site
    p &copy; 2021 Rian8337
    a(href='https://discord.gg/nyD92cE')
        img(src='https://discord.com/api/guilds/316545691545501706/widget.png?style=shield')